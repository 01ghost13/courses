<h1>
  Soonest Courses
</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th><%= sort_link @q, :min_date, 'Closest start date' %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group.course.name, course_path(group.course_id) %>
        </td>
        <td>
          <%= group.min_date %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups %>
